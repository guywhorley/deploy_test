<div class="container">
  <a href="/sessions/new">Back to Login</a>
  <h1 class="eight columns">New User</h1>
  <form class="eight columns" action="/users" method="post">
    <input class="u-full-width" type="text" name="name" placeholder="Name"  />
    <input class="u-full-width" type="text" name="email" placeholder="Email Address" />
    <input class="u-full-width" type="password" name="password" placeholder="Password" />
    <input class="u-full-width" type="password" name="password_confirmation" placeholder="Password Confirmation" />
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
    <input class="u-full-width button-primary" type="submit" name="join" value="Join" />
  </form>
</div>
